@using ContosoCrafts.WebSite.Models
@using ContosoCrafts.WebSite.Services
@using Microsoft.AspNetCore.Components.Web
@inject JsonFileProductService ProductService

<div class="container">
    <button type="button" class="btn btn-primary mb-3">CREATE</button>
    <ul class="list-group">
        @foreach (var product in ProductService.GetProducts())
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <h5>@product.Title</h5>
                <a class="btn btn-primary" href="/Restaurants/Read/@product.Id" role="button">DETAIL</a>
                @* /// onclick function to route to the detail page with restaraunt id in URL Comment goes here *@
            </li>
        }
    </ul>
</div>
   
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
