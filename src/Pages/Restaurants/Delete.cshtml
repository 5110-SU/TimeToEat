@page "{id}"
@model DeleteModel
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@{
	ViewData["Title"] = "Delete Page";
}
<div class="container">
    <h2>Delete Restaurant</h2>
    <div class="container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Product.Id" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Product.Title" class="control-label">Name</label>
                <input asp-for="Product.Title" class="form-control" />
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Image" class="control-label">Photo URL</label>
                <input asp-for="Product.Image" class="form-control" />
                <span asp-validation-for="Product.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Url" class="control-label">Website URL</label>
                <input asp-for="Product.Url" class="form-control" />
                <span asp-validation-for="Product.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label">Description</label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <h5 class="title" id="restaurauntTitle">@Model.Product.Title</h5>
            <img class="restauraunt-img" src='@Model.Product.Image' alt='Image for @Model.Product.Title' style="max-height:1000px;max-width:900px;height:auto;width:auto;">
            <h5 class="restauraunt-description">@Model.Product.Description</h5>
            <h5>Are you sure you want to permanantly remove this restauraunt from the database?</h5>
            <button class="btn btn-primary" type="submit">Confirm Delete</button>
        </form>
    </div>
</div>